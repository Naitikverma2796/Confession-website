<%- include("partials/header.ejs") %>

<div class="p-5 m-5 " style="background-color: rgba(0, 0, 0, 0.078); border-radius: 10px;">
<form class="row g-3" action="/sent" method="post">
  <div class="col-md-4">
    <label for="validationDefault01" class="form-label">First name</label>
    <input type="text" class="form-control" id="validationDefault01" required>
  </div>
  <div class="col-md-4">
    <label for="validationDefault02" class="form-label">Last name</label>
    <input type="text" class="form-control" id="validationDefault02" required>
  </div>
  <div class="col-md-4">
    <label for="validationDefaultUsername" class="form-label">G-mail</label>
    <div class="input-group">
      <span class="input-group-text" id="inputGroupPrepend2">@</span>
      <input type="text" class="form-control" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
    </div>
  </div>
  <div class="col-md-12" >
    <label for="validationDefault03" class="form-label">Content</label>
    <textarea type="text" class="form-control" id="validationDefault03" rows="4" required></textarea>
  </div>
  
  <div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
      <label class="form-check-label" for="invalidCheck2">
        Agree to terms and conditions
      </label>
    </div>
  </div>
  <div class="col-12">
    <input class="btn btn btn-primary" type="submit" value="Submit form">
  </div>
</form>
</div>

