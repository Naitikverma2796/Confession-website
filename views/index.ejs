<script>
    function openModal() {
      document.getElementById('loginModal').style.display = 'flex';
      document.getElementsByClassName('mainContent')[0].classList.add('blurred');
      document.getElementsByClassName('mainContent')[1].classList.add('blurred');
    }

    function closeModal() {
      document.getElementById('loginModal').style.display = 'none';
      document.getElementsByClassName('mainContent')[0].classList.remove('blurred');
      document.getElementsByClassName('mainContent')[1].classList.remove('blurred');
    }
