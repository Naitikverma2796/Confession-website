        <!-- Join Room Tab -->
        <div class="tab-pane fade show active" id="join" role="tabpanel" aria-labelledby="join-tab">
          <h3 class="ms-2">Enter Room Details</h3>
          <form class="row g-3" action="/sent" method="post">
            <div class="p-3" style="background-color: rgba(0, 0, 0, 0.078); border-radius: 10px;">
              <div class="col-md-12">
                <label for="join-username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="join-username" autocomplete="off" required>
              </div>
              <div class="col-md-12">
                <label for="join-roomName" class="form-label">Room Name</label>
                <input type="text" class="form-control" name="roomName" id="join-roomName" autocomplete="off" required>
              </div>
              <div class="col-md-12 mb-3">
                <label for="join-roomId" class="form-label">Room ID</label>
                <input type="text" class="form-control" name="roomId" id="join-roomId" autocomplete="off" required>
              </div>
            </div>
            <div class="ms-2">
              <input class="btn btn-primary" type="submit" value="Join">
            </div>
          </form>
        </div>

        <!-- Re-Enter Room Tab -->
        <div class="tab-pane fade" id="login" role="tabpanel" aria-labelledby="login-tab">
          <h3 class="ms-2">Re-Enter Room</h3>
